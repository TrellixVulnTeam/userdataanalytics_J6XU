<!DOCTYPE html>
<html lang="en">

<%- include("partials/header") -%>

<%- include("partials/sidebar") -%>


  <div class="content-wrapper">
    <section class="content">
      <div class="container">
        <div class="row">
          <div class="col-8">
            <div class="card card-primary mt-5">
              <div class="card-header">
                <h3 class="card-title">Login</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form>
                <div class="card-body">
                  <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">
                    <small class="text-danger font-weight-bold" id="emailErr"></small>
                  </div>
                  <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
                  </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <small class="text-danger font-weight-bold" id="loginErr"></small><br>
                  <button type="button" id="submitBtn" class="btn btn-primary">Submit</button><br>
                  <p>If you are not a user, <b><a href="/register">Sign in</a></b> Here</p>
                </div>
              </form>
            </div>

          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

  <%- include("partials/footer") -%> 

    <script>

      // AJAX for login

      $('#submitBtn').click(function(){
        $.ajax({
          url:"/login",
          method:"post",
          dataType:"json",
          data:{
            email:$('#email').val(),
            password:$("#password").val()
          },
          success:function(res){
            if(res.msg=="success"){
              window.location.href="/home"
            }
            else{
              $('#loginErr').html(res.msg)
            }
          },
          error:function(){
            alert("Server not responding")
          }
        })
      })

      // AJAX for email

      $('#email').change(function () {
        $.ajax({
          url:"/validateEmail/login",
          method: 'post',
          dataType:'json',
          data:{
            email:this.value
          },
          success:function(res){
            $('#emailErr').html(res.msg)
          },
          error:function(){
            alert("Server not responding")
          }
        })
      })

    </script>
    </body>

</html>